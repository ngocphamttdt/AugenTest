@using SampleAssignment.Models
@model SampleAssignment.Models.IndexModel
@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/AjaxJs.js"></script>
<script src="~/Scripts/custom/sampledata.js"></script>

<div class="row">
</div>
<div class="row format-search">
    <form class="form-inline">

        <div class="form-group mx-sm-10 mb-10">
            <input class="form-control" placeholder="Contact..." id="searchField" data-url-search="@Url.Action("Search","Home")" />
        </div>
        <button type="button" class="btn btn-primary" id="btnSearch">Search</button>
    </form>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table" id="dataContent">
            <thead>
                <tr>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Company name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Post</th>
                    <th scope="col">Phone1</th>
                    <th scope="col">Phone2</th>
                    <th scope="col">Email</th>
                    <th scope="col">Web</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>@item.first_name</td>
                        <td>@item.last_name</td>
                        <td>@item.company_name</td>
                        <td>@item.address</td>
                        <td>@item.city</td>
                        <td>@item.state</td>
                        <td>@item.post</td>
                        <td>@item.phone1</td>
                        <td>@item.phone2</td>
                        <td>@item.email</td>
                        <td>@item.web</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                @foreach (var item in Model.Partitions)
                {
                    <li class="page-item">
                        <a class="page-link page-item" data-index-from="@item.FromIndex" data-index-to="@item.ToIndex" data-url-paging="@Url.Action("Paging","Home")" href="#">
                            @item.Index
                        </a>
                    </li>
                }

                @*<li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>*@
            </ul>
        </nav>
    </div>
</div>
